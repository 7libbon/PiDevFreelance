{% extends 'baseB.html.twig' %}

{% block title %}Send Email
{% endblock %}

{% block body %}
	<style>
		body {
			background-image: url('/front/images/slide-01.jpg');
			background-size: cover;
			background-position: center;
			background-attachment: fixed;
			margin: 0;
			padding: 0;
			display: flex;
			min-height: 100vh;
			align-items: center;
			justify-content: center;
		}

		.courses-container {
			display: flex;
			flex-wrap: wrap;
			justify-content: space-around;
		}

		.course-container {
			border: 11px solid #ccc;
			padding: 20px; /* Set a specific height for the containers */
			margin: 20px; /* Adjust the margin as needed */
			text-align: center;
			box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
			border-radius: 8px;
			background-color: #B67332;
			transition: transform 0.3s ease-in-out;
			flex: 0 0 calc(30% - 40px); /* Adjust the width of each container */
		}


		.course-container:hover {
			animation: pulse 0.5s infinite;
		}

		@keyframes pulse {
			0% {
				transform: scale(1);
			}
			50% {
				transform: scale(1.9);
			}
			100% {
				transform: scale(1);
			}
		}

		.course-icon {
			font-size: 24px;
			color: #3498db;
		}

		.course-link {
			text-decoration: none;
			color: inherit;
			display: block;
		}

		footer {
			background-color: transparent;
			padding: 20px 0;
			text-align: relative;
			position: fixed;
			bottom: 0;
			width: 100%;
		}
	</style>

	<h1>Send Email</h1>

	{{ form_start(form) }}
	{{ form_widget(form) }}
	<button type="submit">Send Email</button>
	{{ form_end(form) }}
{% endblock %}
